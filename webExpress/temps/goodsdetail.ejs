<head>
  <% include head.ejs %>
<body style="height:520px">
  <% include nav.ejs %>
  <div class="col-lg-12" style="padding:0px 200px">
    <!-- left col -->
    <div class="col-lg-8 well" style="height:100%;overflow:scroll">
      <table class="table table-bordered">
        <tr style="text-align:center">
          <td colspan="2" style="background-color:gray;color:white"><b>GOODS DETAIL</b></td>
        </tr>
        <tr>
          <td style="width:20%">Code</td>
          <td style="width:80%;background-color:white"><%= code %></td>
        </tr>
        <tr>
          <td>Name</td>
          <td style="background-color:white"><%= name %></td>
        </tr>
        <tr>
          <td>Price</td>
          <td style="background-color:white"><%= price %></td>
        </tr>
        <tr>
          <td>Total</td>
          <td style="background-color:white"><%= total %></td>
        </tr>
        <tr>
          <td>Total Price</td>
          <td style="background-color:white"><%= total_price %></td>
        </tr>
        <tr>
          <td colspan="2">Details</td>
        </tr>
        <tr>
          <td colspan="2" style="height:100px;background-color:white">
            <%= detail %>
          </td>
        </tr>
        <tr>
          <td>Reg Date</td>
          <td style="background-color:white"><%= reg_date %></td>
        </tr>
        <tr>
          <td>Expiry Date</td>
          <td style="background-color:white"><%= ex_date %></td>
        </tr>
        <tr>
          <td colspan="2">Note</td>
        </tr>
        <tr>
          <td colspan="2" style="height:100px;background-color:white"><%= note %></td>
        </tr>
      </table>
    </div>
    <!--start right col -->
    <div class="col-lg-4">
        <!-- add form -->
      <div class="well" style="height:100%">
        <div>
          <table class="table table-bordered">
            <tr>
              <td colspan="2" style="background-color:gray;color:white;text-align:center"><b>STATUS</b></td>
            </tr>
            <tr>
              <td style="width:25%">Edit By</td>
              <td style="background-color:white;width:75%">Editor name</td>
            </tr>
            <tr>
              <td>Confirm By</td>
              <td style="background-color:white">Name</td>
            </tr>
            <tr>
              <td>Last edit</td>
              <td style="background-color:white">Edit Date.</td>
            </tr>
            <tr>
              <td colspan="2" style="height:25px"></td>
            </tr>
            <tr>
              <td colspan="2" style="text-align:center"><b>Comment</b></td>
            </tr>
            <tr>
              <td colspan="2" style="height:250px;background-color:white">Example Comment</td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <!-- end right col -->
  </div>
  <hr>
</body>
</head>

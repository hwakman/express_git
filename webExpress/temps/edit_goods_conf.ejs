<head>
  <% include head.ejs %>
<body style="height:520px">
  <% include nav.ejs %>
  <div class="col-lg-12" style="padding:0px 100px">
    <!-- left col -->
    <div class="col-lg-12 well" style="height:100%;overflow:scroll">
      <p style="text-align:center"><b>Edit Goods Details (Done)</b></p>
        <form>
          <table class="table table-bordered">
            <tr><td style="width:15%">Code</td><td style="width:80%"><%= code %></td></tr>
            <tr><td>Name</td><td><%= name %></td></tr>
            <tr><td>Price</td><td><%= price %></td></tr>
            <tr><td>Total</td><td><%= total %></td></tr>
            <tr><td colspan="2">Details</td></tr>
            <tr><td colspan="2"><%= detail %></td></tr>
            <tr><td>Register Date</td><td><%= reg_date %></td></tr>
            <tr><td>Expiry Date</td><td><%= ex_date %></td></tr>
            <tr><td colspan="2">Note</td></tr>
            <tr><td colspan="2"><%= note %></td></tr>
            <tr>
              <td colspan="2"><a href="/store"><input type="button" value="close"></a></td>
            </tr>
          </table>
        </form>
    </div>
  </div>
  <hr>
</body>
</head>

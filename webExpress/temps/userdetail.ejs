<head>
  <% include head.ejs %>
<body style="height:520px">
  <% include nav.ejs %>
  <div class="col-lg-12" style="padding:0px 100px">
    <!-- left col -->
    <div class="col-lg-8 well" style="height:100%">
      <table class="table table-bordered">
        <tr style="text-align:center">
          <td colspan="2" style="background-color:gray;color:white"><b>Customer Detail</b></td>
        </tr>
        <tr>
          <td style="width:20%">Name</td>
          <td style="width:80%;background-color:white"><%= name %></td>
        </tr>
        <tr>
          <td>E-mail</td>
          <td style="background-color:white"><%= email %></td>
        </tr>
        <tr>
          <td>TEL</td>
          <td style="background-color:white"><%= tel %></td>
        </tr>
        <tr>
          <td>Status</td>
          <td style="background-color:white"><%= status %></td>
        </tr>
        <tr>
          <td colspan="2">Address</td>
        </tr>
        <tr>
          <td colspan="2" style="background-color:white;height:150px"><%= address %></td>
        </tr>
        <tr>
          <td>Last Login</td>
          <td style="background-color:white">Example Date</td>
        </tr>
        <tr>
          <td colspan="2">
            <a href="/customer"><input type="button" value="Back"></a>
          </td>
        </tr>
      </table>
    </div>
    <!--start right col -->
    <div class="col-lg-4">
      <!-- search bar -->
      <div class="well" style="height:13%">
          <input style="width:65%" type="text" placeholder="Search">
          <input style="width:30%" type="submit" value="Search">
        </div>
        <!-- add form -->
      <div class="well" style="height:83%">
        <div>
          <table class="table table-bordered">
            <tr>
              <td colspan="2" style="background-color:gray;color:white;text-align:center"><b>STATUS</b></td>
            </tr>
            <tr>
              <td style="width:25%">Edit By</td>
              <td style="background-color:white;width:75%">Editor name</td>
            </tr>
            <tr>
              <td>Confirm By</td>
              <td style="background-color:white">Name</td>
            </tr>
            <tr>
              <td>Last edit</td>
              <td style="background-color:white">Edit Date.</td>
            </tr>
            <tr>
              <td colspan="2" style="height:25px"></td>
            </tr>
            <tr>
              <td colspan="2" style="text-align:center"><b>Comment</b></td>
            </tr>
            <tr>
              <td colspan="2" style="height:170px;background-color:white">Example Comment</td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <!-- end right col -->
  </div>
  <hr>
</body>
</head>

<head>
  <% include head.ejs %>
  <style>
    button:disabled {
      background: #dddddd;
      color: #ffff00;
    }
    .is_loginuser{
      text-align:right;
      background: linear-gradient(to left, gray, lightgray , white);
      color:white;
    }
    .not_loginuser{
      background: linear-gradient(to right, gray, lightgray, white);
      color:white;
    }
    .message{
      background-color:white;
      height:75px;
    }
    .message_right{
      text-align:right;
      background-color:white;
      height:75px;
    }
  </style>
</head>
<body style="height:520px">
  <% include nav.ejs %>
  <div class="col-lg-12" style="padding:0px 100px">
    <!-- left col -->
    <div class="col-lg-8 well" style="height:100%;overflow:scroll">
      <table class="table table-bordered">
        <%for(var i = 0; i < message.length; i++){%>
          <%if(post[i] == login_user){%>
            <tr class="is_loginuser">
              <td><b>Me</b></td>
            </tr>
            <tr class="message_right">
              <td><%=message[i]%></td>
            </tr>
          <%}%>
          <%if(post[i] != login_user){%>
            <tr class="not_loginuser">
              <td><b>From : <%=post[i]%></b></td>
            </tr>
            <tr class="message">
              <td><%=message[i]%></td>
            </tr>
          <%}%>
        <%}%>
      </table>
      <hr>
    </div>
    <!--start right col -->
    <div class="col-lg-4">
      <div class="well" style="height:100%">
        <form method="post" action="/message_send_re">
          <table class="table">
            <tr>
                <td><input name="get_user" style="width:100%;pointer-events:none" type="text" placeholder="Send to (email)" value="<%=email%>"></td>
            </tr>
            <tr>
              <td><textarea name="message" style="resize:none;height:250px;width:100%"></textarea></td>
            </tr>
            <tr>
              <td><input type="submit" value="send"></td>
            </tr>
          </table>
        </form>
      </div>
    </div>
    <!-- end right col -->
  </div>
  <hr>
</body>

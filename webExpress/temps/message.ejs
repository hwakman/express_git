<head>
  <% include head.ejs %>
  <style>
    button:disabled {
      background: #dddddd;
      color: #ffff00;
    }
  </style>
</head>
<body style="height:520px">
  <% include nav.ejs %>
  <div class="col-lg-12" style="padding:0px 200px">
    <!-- left col -->
    <div class="col-lg-8 well" style="height:100%;overflow:scroll">
      <table class="table table-bordered">
        <%for(var i = 0; i < message.length; i++){%>
          <%if(post[i] == login_user){%>
            <tr style="text-align:right;background-color:gray;color:white">
              <td><b>Me</b></td>
            </tr>
            <tr style="text-align:right;background-color:white;min-height:200px">
              <td><%=message[i]%></td>
            </tr>
          <%}%>
          <%if(post[i] != login_user){%>
            <tr style="background-color:gray;color:white">
              <td><b>From : <%=post[i]%></b></td>
            </tr>
            <tr style="background-color:white;min-height:200px">
              <td><%=message[i]%></td>
            </tr>
          <%}%>
        <%}%>
      </table>
      <hr>
    </div>
    <!--start right col -->
    <div class="col-lg-4">
      <div class="well" style="height:100%">
        <form method="post" action="/message_send_re">
          <table class="table">
            <tr>
                <td><input name="get_user" style="width:100%;pointer-events:none" type="text" placeholder="Send to (email)" value="<%=email%>"></td>
            </tr>
            <tr>
              <td><textarea name="message" style="resize:none;height:250px;width:100%"></textarea></td>
            </tr>
            <tr>
              <td><input type="submit" value="send"></td>
            </tr>
          </table>
        </form>
      </div>
    </div>
    <!-- end right col -->
  </div>
  <hr>
</body>
